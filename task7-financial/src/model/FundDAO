package model;

import org.genericdao.ConnectionPool;
import org.genericdao.DAOException;
import org.genericdao.GenericDAO;
import org.genericdao.MatchArg;
import org.genericdao.RollbackException;
import org.genericdao.Transaction;

import databeans.FundBean;

public class FundDAO extends GenericDAO<FundBean> {
	public FundDAO(String tableName, ConnectionPool cp) throws DAOException {
		super(FundBean.class, tableName, cp);
	}

	public void create(FundBean fund) throws RollbackException {
		FundBean[] Funds = match(MatchArg.and(
				MatchArg.equals("fund_id", Fund.getFundId()),
				MatchArg.equals("Fund_date", Fund.getFundDate())));
		if (Funds.length > 0) {
			return;
		}
		try {
			Transaction.begin();

			create(Fund);

			Transaction.commit();
		} finally {
			if (Transaction.isActive())
				Transaction.rollback();
		}
	}

	public FundBean[] getFund(int fund_id) throws RollbackException {

		FundBean[] Funds = match(MatchArg.equals("fund_id", fund_id));
		return Funds;
	}

}
